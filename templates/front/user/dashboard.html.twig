        <div class="feedList">
          <span>{{ item.category|capitalize }}</span>
          <label class="switch">
          <input type="checkbox" checked>
          <span class="slider round"></span>
          </label>
        </div>
        {% endfor %} #}
      </div>
    </aside>
  </section>
{% endblock %}