            <li><a href="#"><i class="fa-solid fa-rss"></i> <span>Blog</span></a></li>
            {% if is_granted('ROLE_ADMIN')%}
            <li><a href="{{ path('admin') }}"><i class="fa-solid fa-lock"></i> <span>Admin</span></a></li>
            {% endif %}
          </ul>
        </nav>
      </div>
