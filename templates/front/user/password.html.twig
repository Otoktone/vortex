{% extends 'front/layout/layout.html.twig' %}

{% block body %}
{% include "front/user/header.html.twig" %}
{% include "front/layout/sidebar.html.twig" %}
<section id="profile">
    <div class="profile_container">
        <div class="profile_account">
            <div class="profile_background">
            </div>
            <div class="profile_info">
                <div class="profile_image">
                    <img src="build/images/users/{{ app.user.imageFile }}" alt="user profile image">
                </div>
                <div class="profile_name">
                    <h4>{{ app.user.username}}</h4>
                </div>
            </div>
            <hr>
            <div class="profile_credits">
                <div class="email">
                    <h5>Email :</h5>
                    {{ app.user.email}}
                </div>
            </div>
            {# <div class="profile_buttons">
                <a class="home_button" href="{{ path('home') }}">Home</a>
                <a class="home_button" href="{{ path('edit') }}">Edit</a>
                <a class="home_button" href="{{ path('dashboard') }}">My feed</a>
            </div> #}
        </div>
    </div>
</section>
<section id="password">
    {{ form_start(changePasswordForm) }}
        {% for flash_error in app.flashes('errorPassword', [], true) %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        {# <div class="register_logo" >
            <img src="{{ asset('build/images/logos/register_logo.png') }}" alt="logo vortex register form">
        </div>
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        <div class="register_password">
            {{ form_row(registrationForm.plainPassword) }}
            <i id="togglePassword" class="fa-solid fa-eye"></i>
        </div>
        <div class="register_terms">
            <label class="container">
                <input class="agreeTerms" name="agreeTerms"  type="checkbox" checked="">
                <span class="checkmark"></span>
            </label>
            <span><a href="">Agree terms</a></span>
        </div>
        <button type="submit" class="btn">Register</button>
        <div class="register_login">
            <span>Already an account ? </span><a href="{{ path('app_login') }}">Sign in</a>
        </div> #}
        {{ form_row(changePasswordForm.currentPassword) }}
        {{ form_row(changePasswordForm.newPassword) }}
        <button type="submit" class="btn">Update</button>
        {% for flash_success in app.flashes('successPassword', [], true) %}
            <div class="alert alert-success" role="alert">{{ flash_success }}</div>
        {% endfor %}
    {{ form_end(changePasswordForm) }}
</section>
{% endblock %}